{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Customer Form",
  "description": "Customer Form Descriptor",
  "type": "object",
  "required": ["customerName", "phoneNumber"],
  "properties": {
    "customerId": { "type": "number" },
    "customerName": {
      "type": "string",
      "title": "Customer Name",
      "minLength": 2,
      "maxLength": 30
    },
    "contactName": {
      "type": "string",
      "title": "Contact Name",
      "minLength": 2,
      "maxLength": 30
    },
    "contactJobTitle": {
      "type": "string",
      "title": "Contact Job Title",
      "minLength": 2,
      "maxLength": 30
    },
    "address": {
      "type": "string",
      "title": "Address",
      "minLength": 2,
      "maxLength": 100
    },
    "emailAddress": {
      "type": "string",
      "title": "Email",
      "format": "email"
    },
    "phoneNumber": {
      "type": "string",
      "title": "Phone Number",
      "minLength": 10,
      "maxLength": 11
    }
  }
}
